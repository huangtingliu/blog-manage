<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 系统初始化管理 -->
	<bean id="asposeLicenseInit" class="com.huangtl.blogmgr.core.init.impl.AsposeLicenseInit">
		<property name="licenseResource" value="/WEB-INF/aspose/license.xml"></property>
	</bean>
	
	<!-- 菜单管理 -->
	<bean id="functionService" class="com.huangtl.blogmgr.service.impl.FunctionServiceImpl">
		<property name="functionDao" ref="functionDao"></property>
	</bean>
	<bean id="functionDao" class="com.huangtl.blogmgr.dao.impl.FunctionDaoImpl" parent="myBatisDao"/>
	<!-- 后台用户管理 -->
	<bean id="userService" class="com.huangtl.blogmgr.service.impl.UserServiceImpl">
		<property name="userDao" ref="userDao"></property>
		<property name="roleDao" ref="roleDao"></property>
	</bean>
	<bean id="userDao" class="com.huangtl.blogmgr.dao.impl.UserDaoImpl" parent="myBatisDao"/>
	
	<!-- 角色管理 -->
	<bean id="roleService" class="com.huangtl.blogmgr.service.impl.RoleServiceImpl">
		<property name="roleDao" ref="roleDao"></property>
	</bean>
	<bean id="roleDao" class="com.huangtl.blogmgr.dao.impl.RoleDaoImpl"  parent="myBatisDao"/>
	
	<!-- 权限管理 -->
	<bean id="privilegeService" class="com.huangtl.blogmgr.service.impl.PrivilegeServiceImpl">
		<property name="privilegeDao" ref="privilegeDao"></property>
	</bean>
	<bean id="privilegeDao" class="com.huangtl.blogmgr.dao.impl.PrivilegeDaoImpl" parent="myBatisDao"/>
	
	<!-- 登录日志 -->
	<bean id="loginLogService" class="com.huangtl.blogmgr.service.impl.LoginLogServiceImpl">
		<property name="loginLogDao" ref="loginLogDao"></property>
	</bean>
	<bean id="loginLogDao" class="com.huangtl.blogmgr.dao.impl.LoginLogDaoImpl" parent="myBatisDao"/>
</beans>
