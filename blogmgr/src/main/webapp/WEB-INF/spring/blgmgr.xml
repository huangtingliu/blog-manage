<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<!-- 菜单管理 -->
	<bean id="menuService" class="com.huangtl.blogmgr.service.impl.MenuServiceImpl">
		<property name="menuDao" ref="menuDao"></property>
	</bean>
	<bean id="menuDao" class="com.huangtl.blogmgr.dao.impl.MenuDaoImpl" parent="myBatisDao"></bean>
	<!-- 后台用户管理 -->
	<bean id="userService" class="com.huangtl.blogmgr.service.impl.UserServiceImpl">
		<property name="userDao" ref="userDao"></property>
	</bean>
	<bean id="userDao" class="com.huangtl.blogmgr.dao.impl.UserDaoImpl" parent="myBatisDao"></bean>
	
	<!-- 权限配置管理 -->
	<bean id="authService" class="com.huangtl.blogmgr.service.impl.AuthServiceImpl">
		<property name="roleDao" ref="roleDao"></property>
	</bean>
	<bean id="roleDao" class="com.huangtl.blogmgr.dao.impl.RoleDaoImpl"  parent="myBatisDao"></bean>
</beans>
