<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huangtl.blogmgr.model.blog.DevelopPlan">

	<resultMap id="mapper" type="com.huangtl.blogmgr.model.blog.DevelopPlan" >
		<id property="fId" column="dplan_id"/>
		<result property="fName" column="dplan_name"/>
		<result property="fPriority" column="dplan_priority" />
		<result property="fDescr" column="dplan_descr"/>
		<result property="fFinishDate" column="dplan_finish_date"/>
		<result property="fProgress" column="dplan_progress"/>
		<result property="fPlanStauts" column="dplan_status"/>
		<result property="fCreateDate" column="dplan_create_date"/>
		<result property="fEstimatedDate" column="dplan_estimated_date"/>
		<result property="fCreateUser" column="uid_create_user"/>
		<result property="fPlanTerminator" column="uid_plan_terminator"/>
		
		<result property="planTerminatorName" column="planTerminatorName"/>
		<result property="createUserName" column="createUserName"/>
	</resultMap>
	
	<sql id="field">
		dplan_id ,dplan_name ,dplan_priority,dplan_finish_date,dplan_progress,dplan_status,
		dplan_create_date as fCreateDate,dplan_estimated_date,uid_create_user,uid_plan_terminator
		<if test="fDescr_show">,dplan_descr</if>
		<if test="planTerminatorName_show">,planTerminatorName</if>
		<if test="createUserName_show">,createUserName</if>
	</sql>
	
	<sql id="where">
		 <trim prefix="where" prefixOverrides="and|or">
		 	<if test="defaultWhere!=null and defaultWhere">
		 		1=1
		 	</if>
		</trim>
	</sql>
	
	<sql id="order">
		<if test="sorts != null and sorts.size() != 0">
			order by 
			<foreach collection="sorts" separator="," index="key" item="val">
				${key} ${val}
			</foreach>
		</if>
	</sql>
	
	<insert id="insert" parameterType="com.huangtl.blogmgr.model.blog.DevelopPlan">
		insert into debug_develop_plan(
			dplan_id ,dplan_name ,dplan_priority,dplan_descr,dplan_finish_date,dplan_progress,dplan_status,
			dplan_create_date,dplan_estimated_date,uid_create_user,uid_plan_terminator
		) values(
			#{fId},#{fName},#{fPriority},#{fDescr},#{fFinishDate},#{fProgress},#{fPlanStauts},#{fCreateDate},
			#{fEstimatedDate},#{fCreateUser},#{fPlanTerminator}
		);
	</insert>
	
	<!-- <select id="selectList" resultMap="mapper" parameterType="map">
		select 
			<include refid="field"/>
		from sys_LoginLog
			<include refid="where"/>
	</select> -->
	
	<select id="selectCount"  resultType="long" parameterType="map">
	  select count(dplan_id)
	  from debug_develop_plan
		<include refid="where"/>
	</select>
	
	<select id="selectPaging" resultMap="mapper" parameterType="map">
		select 
			<include refid="field"/>
		from debug_develop_plan a
		left join (
			select ui_Id as buid, ui_Name as createUserName  from mgr_userinfo
		)b on a.uid_create_user = b.buid
		left join(
			select ui_Id as cuid, ui_Name as planTerminatorName  from mgr_userinfo
		)c on a.uid_plan_terminator = c.cuid
			<include refid="where"/>
			<include refid="order"/>
		limit #{startIndex},#{pageSize}
	</select> 
	
</mapper>